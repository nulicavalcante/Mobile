<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btnPopulacao"
        android:layout_width="@dimen/imagebutton_inicio"
        android:layout_height="@dimen/imagebutton_inicio"
        android:src="@drawable/people_icon"
        android:scaleType="fitXY"
        android:background="?android:selectableItemBackground"/>

    <ImageButton
        android:id="@+id/btnImc"
        android:layout_width="@dimen/imagebutton_inicio"
        android:layout_height="@dimen/imagebutton_inicio"
        android:src="@drawable/imc_icon"
        android:scaleType="fitXY"
        android:layout_below="@+id/btnPopulacao"
        android:background="?android:selectableItemBackground"/>

    <ImageButton
        android:id="@+id/btnCalculadora"
        android:layout_width="@dimen/imagebutton_inicio"
        android:layout_height="@dimen/imagebutton_inicio"
        android:src="@drawable/calculator_icon"
        android:scaleType="fitXY"
        android:layout_below="@+id/btnImc"
        android:background="?android:selectableItemBackground"/>


</RelativeLayout>
