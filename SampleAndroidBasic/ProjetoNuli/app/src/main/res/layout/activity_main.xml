<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="@android:mipmap/sym_def_app_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Nome de Usuário"
        android:id="@+id/txtUsuario"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:id="@+id/edtUsuario"
        android:layout_below="@+id/txtUsuario"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Senha"
        android:id="@+id/txtSenha"
        android:layout_below="@+id/edtUsuario"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:id="@+id/edtSenha"
        android:layout_below="@+id/txtSenha"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acessar"
        android:id="@+id/btAcessar"
        android:layout_below="@+id/edtSenha"
        android:layout_alignEnd="@+id/txtUsuario" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Usuário"
        android:textSize="10sp"
        android:id="@+id/btNovoUser"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edtSenha" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar Usuário"
        android:textSize="10sp"
        android:id="@+id/btUpdateUser"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btNovoUser" />


</RelativeLayout>
